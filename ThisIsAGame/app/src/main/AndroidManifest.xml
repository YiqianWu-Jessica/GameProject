<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="uoft.csc207.thisisagame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".login.LoginActivity" />
        <activity android:name=".login.PlayerSelectActivity" />
        <activity android:name=".game1.StartLevel1Activity" />
        <activity android:name=".game1.Game1Activity" />
        <activity android:name=".game2.StartLevel2Activity" />
        <activity android:name=".game2.Game2Activity" />
        <activity android:name=".game3.StartLevel3Activity" />
        <activity android:name=".game3.Game3Activity" />
        <activity android:name=".score.ScoreBoardActivity" />
        <activity android:name=".result.WinActivity" />
        <activity android:name=".result.LoseActivity" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>